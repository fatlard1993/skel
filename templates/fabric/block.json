{
	"_opts": {
		"id": "${name}-${user}",
		"displayName": {
			"base": "${name}",
			"apply": [
				{ "name": "capitalize", "args": [true, "-"] },
				{ "name": "regReplace", "args": ["-", " "] }
			]
		},
		"maven": "${name}",
		"_name": {
			"base": "${name}",
			"apply": [
				{ "name": "regReplace", "args": ["-", "_"] }
			]
		},
		"block": {
			"base": "${name}",
			"apply": [
				{ "name": "capitalize", "args": [true, "-"] },
				{ "name": "regReplace", "args": ["-", ""] }
			]
		}
	},
	"${name}": {
		"gradle": {
			"wrapper": {
				"gradle-wrapper.jar": { "_data": "fabric/gradle/gradle-wrapper.jar" },
				"gradle-wrapper.properties": ["fabric/gradle/gradle-wrapper.properties"]
			}
		},
		"src": {
			"main": {
				"java": {
					"${user}": {
						"${_name}": {
							"Main.java": ["fabric/block/Main.java"],
							"${block}.java": ["fabric/block/block.java"]
						}
					}
				},
				"resources": {
					"fabric.mod.json": ["fabric/fabric.mod.json"],
					"assets": {
						"${id}": {
							"blockstates": {
								"${name}.json": ["fabric/block/blockstate.json"]
							},
							"lang": {
								"en_us.json": {
									"_jsonFile": true,
									"block.${id}.${name}": "${displayName}"
								}
							},
							"textures": {
								"block": {}
							},
							"models": {
								"block": {}
							}
						}
					},
					"data": {
						"${id}": {
							"loot_tables": {
								"block": {
									"${name}.json": ["fabric/block/loot_table.json"]
								}
							},
							"advancements": {
								"unlock_${_name}.json": ["fabric/block/unlockAdvancement.json"]
							}
						}
					}
				}
			}
		},
		".gitignore": ["fabric/.gitignore"],
		"build.gradle": ["fabric/gradle/build.gradle"],
		"gradle.properties": ["fabric/gradle/gradle.properties"],
		"gradlew": { "_data": "fabric/gradle/gradlew" },
		"gradlew.bat": { "_data": "fabric/gradle/gradlew.bat" },
		"LICENSE": ["LICENSE"],
		"settings.gradle": ["fabric/gradle/settings.gradle"],
		"README.md": "# ${displayName}\n"
	},
	"_scripts": ["fabric/init"]
}